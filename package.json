{
	"name": "order-summary-component--dev",
	"description": "Development tools for this project",
	"author": "Idiotic Enigma",
	"license": "ISC",
	"version": "1.0.0",
	"main": "index.js",
	"devDependencies": {
		"autoprefixer": "^7.1.4",
		"npm-run-all": "^4.1.1",
		"postcss": "^8.1.0",
		"postcss-cli": "^8.3.1",
		"sass": "^1.34.1"
	},
	"scripts": {
		"watch-sass": "sass --watch sass/main.scss styles.css",
		"build-full-css": "npm-run-all compile-sass prefix-css compress-css",
		"compile-sass": "sass sass/main.scss styles.comp.css",
		"prefix-css": "postcss --use autoprefixer -b 'last 10 versions' styles.comp.css -o styles.prefix.css",
		"compress-css": "sass styles.prefix.css styles.css --style=compressed"
	}
}
